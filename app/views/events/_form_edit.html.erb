<% if is_edit %>
  <% url_dest = event_path %>
  <% method = :patch %>
<% else %>
  <% url_dest = events_path %>
  <% method = :post %>
<% end %>

<%= form_for :event, :url => url_dest, :method => method, :html => {:class=>'form-horizontal'} do |f| %>
  <div class="<%= form_error_class @event, :name%>">

  <%= render :partial => "f_select", locals: { f: f, obj: @event, name: :event_category, text: "Typ akce", options: Event::category_filter(current_user) } %>

  <%= render :partial => "f_text_field", locals: { f: f, obj: @event, name: :title, text: "Název akce" } %>

  <%= render :partial => "f_text_area", locals: { f: f, obj: @event, name: :body, text: "Popis akce" } %>

  <%= render :partial => "f_date_field", locals: { f: f, obj: @event, name: :event_start, text: "Začátek akce" } %>

  <%= render :partial => "f_date_field", locals: { f: f, obj: @event, name: :event_end, text: "Konec akce" } %>

  <%= render :partial => "f_checkbox", locals: { f: f, obj: @event, name: :limit_num_participants, text: "Chceš limitovat maximální počet účastníků?" } %>

  <%= render :partial => "f_text_field", locals: { f: f, obj: @event, name: :max_participants, text: "Limit na počet účastníků" } %>

  <%= render :partial => "f_checkbox", locals: { f: f, obj: @event, name: :enable_only_specific_participants, text: "Pozvat pouze některé účastníky" } %>

  <%= render :partial => "f_checkbox", locals: { f: f, obj: @event, name: :enable_only_specific_substitutes, text: "Pozvat pouze některé náhradníky" } %>

  <% if current_user.admin? %>
    <%= render :partial => "f_checkbox", locals: { f: f, obj: @event, name: :enable_only_specific_organisers, text: "Pozvat pouze některé orgy" } %>
  <% else %>
    <%= f.hidden_field :enable_only_specific_organisers %>
  <% end %>

  <%= render :partial => "f_checkbox", locals: { f: f, obj: @event, name: :uninvited_participants_dont_see, text: "Nepozvaní účastníci o akci neví" } %>  

  <% if current_user.admin? %>
    <%= render :partial => "f_checkbox", locals: { f: f, obj: @event, name: :uninvited_organisers_dont_see, text: "Nepozvaní organizátoři o akci neví" } %>
  <% else %>
    <%= f.hidden_field :uninvited_organisers_dont_see %>
  <% end %>

  <%= render :partial => "f_checkbox", locals: { f: f, obj: @event, name: :spec_place, text: "Účastníci specifikují místo nástupu" } %>

  <%= render :partial => "f_text_field", locals: { f: f, obj: @event, name: :spec_place_detail, text: "Místa nástupu (jednotlivá místa odděl čárkami)" } %>

  <%= render :partial => "f_checkbox", locals: { f: f, obj: @event, name: :spec_scout, text: "Rodiče mají možnost sdělení k účastníkovi" } %>

  <%= render :partial => "f_checkbox", locals: { f: f, obj: @event, name: :spec_mass, text: "Účastníci specifikují zájem o mši" } %>

  <%= render :partial => "f_checkbox", locals: { f: f, obj: @event, name: :bonz_parent, text: "Po přihlášení přijde rodičům mail" } %>  

  <%= render :partial => "f_text_field", locals: { f: f, obj: @event, name: :bonz_org, text: "Bonz mail" } %>

  <%= render :partial => "f_text_field", locals: { f: f, obj: @event, name: :event_info_url, text: "Odkaz na další informace" } %>

  <%= render :partial => "f_text_field", locals: { f: f, obj: @event, name: :event_photos_url, text: "Odkaz na fotky" } %>

  <%= render :partial => "f_select", locals: { f: f, obj: @event, name: :visible, text: "Kdo se o akci vůbec dozví", options: [["každý", "ev"], ["user", "user"], ["org", "org"]] } %>
 
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit :class=>'btn btn-primary', :value=>'Uložit akci' %>
    </div>
  </div>

  </div>
<% end %>
