<% else %>
  <%= form_tag act_event_enroll_other_path(event_id: event.id, participant_id: participant.id, chosen: chosen, delete: delete, path: act_event_enroll_others_path(event_id: event.id, status: status, chosen: chosen_filter, role: role)), method: :post do %>
